<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:orientation="vertical"
        android:id="@+id/loginBannerLayout"
        android:background="@color/colorPrimary"
        android:gravity="center_vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/register"
            android:textColor="@color/white"
            android:textSize="35sp"
            android:layout_marginLeft="10dp"
            android:layout_marginStart="10dp"/>

    </LinearLayout>

    <LinearLayout
        android:layout_below="@+id/loginBannerLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="70dp"
        android:gravity="center_horizontal">

        <android.support.design.widget.TextInputEditText
            android:layout_height="wrap_content"
            android:layout_width="@dimen/input_size"
            android:drawableLeft="@drawable/icone4"
            android:drawableStart="@drawable/icone4"
            android:hint="@string/loginNumber"
            style="@style/EditText"
            android:layout_marginBottom="10dp"/>

      <android.support.design.widget.TextInputEditText
            android:layout_height="wrap_content"
            android:layout_width="@dimen/input_size"
            android:drawableLeft="@drawable/icone4"
            android:drawableStart="@drawable/icone4"
            android:hint="Nom &amp; prÃ©nom"
            style="@style/EditText"
            android:layout_marginBottom="10dp"/>

        <android.support.design.widget.TextInputEditText
            android:id="@+id/registerPwdEdt"
            android:layout_height="wrap_content"
            android:layout_width="@dimen/input_size"
            android:drawableLeft="@drawable/icone2"
            android:drawableStart="@drawable/icone2"
            android:hint="@string/loginPwd"
            style="@style/EditText"/>

        <Button
            android:text="@string/registerBtn"
            style="@style/BtnBackgroung"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="40dp"
            android:layout_marginBottom="12dp"/>


    </LinearLayout>

    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/use_email"
        android:textColor="@color/colorSecondary_text"
        android:id="@+id/checkBox"
        android:layout_below="@+id/loginBannerLayout"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

</RelativeLayout>
